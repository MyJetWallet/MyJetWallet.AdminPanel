@using Service.Liquidity.Portfolio.Grpc
@using Service.Liquidity.Portfolio.Domain.Models
@inject IAssetPortfolioService _assetPortfolioService

<ul class="nav">
    <li><button type="button" class="btn-outline-secondary btn" @onclick="Refresh">Refresh</button></li>
</ul>

<table class="table" style="width: auto">
    <thead>
    <tr>
        <th>UpdateDate</th>
        <th>WalletName</th>
        <th>Asset</th>
        <th>VolumeDifference</th>
        <th>Comment</th>
        <th>User</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var history in _histories.OrderByDescending(elem => elem.UpdateDate))
    {
        <tr>
            <td>@history.UpdateDate</td>
            <td>@history.WalletName</td>
            <td>@history.Asset</td>
            <td>@history.VolumeDifference</td>
            <td>@history.Comment</td>
            <td>@history.User</td>
        </tr>
    }
    </tbody>
</table>


@code {
    private List<ChangeBalanceHistory> _histories = new();

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }

    private async Task Refresh()
    {
        var response = await _assetPortfolioService.GetChangeBalanceHistoryAsync();
        _histories = response.Histories ?? new List<ChangeBalanceHistory>();
        StateHasChanged();
    }
}