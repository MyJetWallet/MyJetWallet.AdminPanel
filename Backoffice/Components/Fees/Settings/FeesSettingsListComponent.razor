@using Backoffice.Services.Fees.Settings
@using Service.Fees.Domain.Models
@using Backoffice.Abstractions.Models
@inject IFeesSettingsManager FeesSettingsManager;
@inject IToaster ToastService

<Loader LoaderConfig="@LoaderConfig"/>

<ul class="nav float-left">
    <li><button @onclick="OnRefresh" type="button" class="btn btn-outline-primary" style="margin: 5px; border-radius: 10px">Refresh</button></li>
    <li><button @onclick="OnAddFeesSettings" type="button" class="btn btn-outline-success" style="margin: 5px; border-radius: 10px">Add</button></li>
</ul>

<table class="table">
    <thead>
        <tr>
            <th>Broker</th>
            <th>Fee account</th>
            <th>Fee wallet</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var feesSettings in FeesSettingsList)
        {
            <FeesSettingsTableRow Item="@feesSettings" LoaderConfig="@LoaderConfig" OnDeleteCallback="DeleteFeeSettings"/>
        }
    </tbody>
</table>

@if (IsShowAdding)
{
    <div>
        <FeesSettingsDetailsDialogEdit IsCreate="true" OnCloseCallback="OnCloseAddingDialog" OnCreateCallback="OnCreateFeesSettings" />
    </div>
}


@code {
    private string Message { get; set; } = "-- none --";

    private ILoaderConfiguration LoaderConfig { get; set; } = new LoaderConfiguration();
    
    private bool IsShowAdding { get; set; }

    private List<FeesSettings> FeesSettingsList { get; set; } = new();

    private async void OnRefresh()
    {
        LoaderConfig.Enable();
        
        FeesSettingsList = await FeesSettingsManager.GetAll() ?? new List<FeesSettings>();
        
        LoaderConfig.Disable();
        await InvokeAsync(StateHasChanged);
    }

    protected override void OnInitialized()
    {
        OnRefresh();
        
        base.OnInitialized();
    }

    private async Task OnAddFeesSettings()
    {
        IsShowAdding = true;
        await InvokeAsync(StateHasChanged);
    }

    private void OnCloseAddingDialog()
    {
        IsShowAdding = false;
        StateHasChanged();
    }
    
    private async void OnCreateFeesSettings(FeesSettings item)
    {
        try
        {
            await FeesSettingsManager.CreateFeesSettings(item);
            
            ToastService.Info($"Fees settings {item.BrokerId} is created", "Create fees settings");
            
            IsShowAdding = false;
            
            OnRefresh();    
        }
        catch (Exception ex)
        {
            ToastService.Error(ex.Message, "Fees settings creation");
        }
    }

    private async void DeleteFeeSettings(FeesSettings item)
    {
        try
        {
            await FeesSettingsManager.DeleteFeesSettings(item);
            
            ToastService.Info($"Fees settings {item.BrokerId} is deleted", "Delete fees settings");
            
            OnRefresh();    
        }
        catch (Exception ex)
        {
            ToastService.Error(ex.Message, "Fees settings deletion");
        }
    }
}